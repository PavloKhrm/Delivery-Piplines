# Hetzner Cloud API token (required)
HCLOUD_TOKEN=__PUT_YOUR_HETZNER_TOKEN__

# Basic auth for the dashboard
PANEL_USER=admin
PANEL_PASS=admin

# Panel port
PORT=3000

# Default container ports exposed by images
DEFAULT_WEB_PORT=80
DEFAULT_API_PORT=3000

# Reserved (enable/disable deploy features)
DEPLOY_ENABLE=true

# Optional: your repo meta (not required for basic flow)
REPO_USER=your-github-user
REPO_NAME=your-repo-name
REPO_BRANCH=main

# Default images for new clients (must exist in Docker Hub)
DEFAULT_API_IMAGE=index.docker.io/your-docker-namespace/client-api:latest
DEFAULT_WEB_IMAGE=index.docker.io/your-docker-namespace/client-web:latest

# Webhook secret token (required)
WEBHOOK_TOKEN=__CHOOSE_A_LONG_RANDOM_SECRET__

# Docker Hub namespace used by rollouts
DOCKER_REPO=your-docker-namespace
