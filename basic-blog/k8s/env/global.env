# =====================================
# Global defaults for all client stacks
# =====================================

# The shared base domain used for ingress routing
BASE_DOMAIN=emitit.local

# Default Kubernetes storage class (leave blank to use cluster default)
STORAGE_CLASS=

# Default Helm deployment timeout
TIMEOUT=5m

# =====================================
# Default resource settings (optional)
# =====================================

# Default Java heap size for Elasticsearch
ELASTIC_JAVA_OPTS=-Xms256m -Xmx256m

# Default website image used if none is specified per client
WEBSITE_IMAGE=nguyendo1234/basic-frontend:latest

# =====================================
# Optional global service ports (if consistent)
# =====================================

MAILCRAB_UI_PORT=1080
MAILCRAB_SMTP_PORT=1025
WEBSITE_PORT=80
